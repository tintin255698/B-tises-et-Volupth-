{% extends 'base.html.twig' %}

{% block title %}Galerie{% endblock %}

{% block stylesheets %}
    <link href="/css/footerInner.css" rel="stylesheet">
{% endblock %}


{% block body %}

    {% include 'navbar/index2.html.twig' %}

<main id="main">
    <!-- ======= Breadcrumbs Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Galerie</h2>
                <ol>
                    <li><a href="{{ path('index')}}#hero">Accueil</a></li>
                    <li>Galerie</li>
                </ol>
            </div>
        </div>
    </section><!-- End Breadcrumbs Section -->
    <div class="inner-page">
        <div class="container-fluid">

        <div id="gallery" class="gallery">

                    <div class="section-title mt-5">
                        <h1 class="mt-5">Nos photos !</h1>
                    </div>




            <!-- Button trigger modal -->
            <div class="mb-5">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                Ajouter des photos <i class='bx bx-image-add bx-tada bx-rotate-270' ></i>
            </button>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Ajouter des photos</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            {{ form(imageForm) }}
                            {{ form_widget(imageForm) }}
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                        </div>
                    </div>
                </div>
            </div>
                    <div class="row no-gutters">
                        {% for plas in pla %}
                            <div class="col-lg-3 col-md-4">
                                <div class="gallery-item">
                                    <a href="{{ vich_uploader_asset(plas, 'imageFile')|imagine_filter('carre') }}" class="venobox" data-gall="gallery-item">
                                        <img src="{{ vich_uploader_asset(plas, 'imageFile')|imagine_filter('carre') }}" alt="{{ plas.imageName}}" class="img-fluid">
                                    </a>
                                </div>
                            </div>

                        {% endfor %}
                    </div>
        </div>
        </div>
    </div>
</main>

{% endblock %}
