{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    <link href="/css/footerInner.css" rel="stylesheet">

{% endblock %}

{% block body %}

    {% include 'navbar/index2.html.twig' %}

    <main id="main">
    <!-- ======= Breadcrumbs Section ======= -->
    <section class="breadcrumbs">
        <div class="container">


            <div class="d-flex justify-content-between align-items-center">
                <h2>Entrée</h2>
                <ol>
                    <li><a href="{{ path('index')}}#hero">Acceuil</a></li>
                    <li>Entrée</li>
                </ol>
            </div>
        </div>
    </section><!-- End Breadcrumbs Section -->
    <section class="inner-page">
    <div class="container">

    <div class="class mt-5">
        <h3 class="mt-5">Progression du choix de votre menu :</h3>
    </div>



    <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100">33</div>
    </div>

    <div class="class mt-5 mb-5">
        <h1 class="text-center mb-5">Votre entrée !</h1>
    </div>

<div class="text-center h5">
    <div class="mb-5">

    <label for="entre" class="h4">Choisissez votre entrée :</label><br>
                    <select name="entre" id="entre">
                        {% for plas in pla %}
                            <option value="{{ plas.id }}">{{ plas.produit }}</option>
                        {% endfor %}
                    </select>
<br>
</div>
                    {% for plas in pla|slice(0,1) %}
                        <a href="{{ path('entree_add', {'id':plas.id}) }}"><button type="submit"  class="btn mt-3">Ajouter</button></a>
                    {% endfor %}
</div>
    </div>


    </section>
    </main><!-- End #main -->

{% endblock %}


    {% block javascripts %}
        <script>

            var delay = 500;
            $(".progress-bar").each(function(i){
                $(this).delay( delay*i ).animate( { width: $(this).attr('aria-valuenow') + '%' }, delay );

                $(this).prop('Counter',0).animate({
                    Counter: $(this).text()
                }, {
                    duration: delay,
                    easing: 'swing',
                    step: function (now) {
                        $(this).text(Math.ceil(now)+'%');
                    }
                });
            });

        </script>

    {% endblock %}