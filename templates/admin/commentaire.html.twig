{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block stylesheets %}
    <link rel="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap.min.css">
{% endblock %}


{% block body %}

  {% include 'navbar/index2.html.twig' %}

<main id="main">

    <!-- ======= Breadcrumbs Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Gestion des commentaires</h2>
                <ol>
                    <li><a href="{{ path('index')}}#hero">Accueil</a></li>
                    <li>Gestion des commentaires</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs Section -->

    <section class="inner-page">
        <div class="container">

    {% include 'menu_admin.html.twig' %}
    <h1 class="text-center mt-5 mb-5">Commentaires des clients</h1>

    <table id="admin" class="table table-striped table-bordered text-center" style="width:100%">
        <thead>
        <th>Note</th>
        <th>Commentaire</th>
        <th>Supprimer</th>
        </thead>
        <tbody>
        {% for repos in repo %}
            <tr>
            <td>{{ repos.note}}</td>
            <td>{{ repos.contenu }}</td>
            <td><a href="{{ path('supprimer_commentaire', {'id':repos.id}) }}" class="btn btn-dark"><i class='bx bx-check-double'></i></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

    </section>

</main><!-- End #main

{% endblock %}

{% block javascripts %}

    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#admin').DataTable();
        } );
    </script>


{% endblock %}