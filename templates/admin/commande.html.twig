{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}
  {% include 'navbar/index2.html.twig' %}

<main id="main">

    <!-- ======= Breadcrumbs Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Gestion des images</h2>
                <ol>
                    <li><a href="{{ path('index')}}#hero">Accueil</a></li>
                    <li>Gestion des images</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs Section -->

    <section class="inner-page">
        <div class="container">

            <div class="mb-5">

                {% include 'menu_admin.html.twig' %}
                <h1 class="mt-4 mb-4 text-center">Liste des utilisateurs</h1>
                <table id="admin" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                    <th>Date de commande</th>
                    <th>Date de livraison</th>
                    <th>Produits</th>
                    <th>Quantite</th>
                    <th>Total commande</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Mail</th>
                    <th>Telephone</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Societe</th>
                    <th>Adresse</th>
                    <th>Adresse 2</th>
                    <th>Code postal</th>
                    </thead>
                    <tbody>
                    {% for plas in pla %}
                    <tr>
                        <td>{{ plas.datetime|date("m/d/Y") }}</td>
                    {{ plas.quantite }}
                    {{ plas.produit }}
                    {{ plas.total }}
    {{ plas.user.nom }}
    {{ plas.user.prenom }}
    {{ plas.user.telephone }}
    {{ plas.user.email }}

    {% for adresse in plas.user.adresses %}

        {{ adresse.adresse }}
    {% endfor %}

    <td><a href="{{ path('afficher_user', {'id':plas.user.id}) }}" class="btn btn-dark"><i class='bx bx-check-double'></i></a></td>
{% endfor %}



                </table>

            </div>
        </div>

    </section>


</main><!-- End #main -->

{% endblock %}