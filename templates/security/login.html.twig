{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}


    {% if app.user %}
        <div class="mb-3">
            Vous êtes déjà connecté comme {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}

    <div class="container">
    <h1 class="titre mb-5 font-weight-normal">Merci de vous identifier</h1>


        <div class="form-row mt-3">
            <div class="col-lg-6 col-md-6">
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" placeholder="Entrez votre email" class="form-control" required autofocus>
            </div>
            <div class="col-lg-6 col-md-6">
                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Entrez votre mot de passe" required>
            </div>
<br>
            <br>
            <a target="_blank"  href="{{ path('request_resetting') }}">Mot de passe oublié ?</a>
        </div>





    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

        <div class="text-right">
            <button type="submit" class="btn btn-primary mb-5 mt-5">Connexion</button>
        </div>



        </div>
</form>
{% endblock %}
