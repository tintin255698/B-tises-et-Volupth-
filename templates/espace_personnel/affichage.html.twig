{% extends 'base.html.twig' %}



{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <div class="container">

        {% include 'menu_user.html.twig' %}
        <h1 class=" mt-5 mb-5 text-center">Vos coordonnees</h1>

            <h2 class="mb-4">Bonjour {{ app.user.prenom }}, <small>voici vos informations personnelles :</small></h2>

        <table id="admin" class="table table-striped table-bordered text-center" style="width:100%">

            <thead>
            <th>Prenom</th>
            <th>Nom</th>
            <th>Email</th>
            <th>Modifier son identifiants</th>
            <th>Modifier son mot de passe</th>
            <th>Supprimer</th>
            </thead>
            <tbody>
            <tr>
                <td>{{user.prenom}}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.email }}</td>
                <td><a href="{{ path ('gestion_personnelle_modification') }}" class="btn btn-dark">Modifier</a></td>
                <td><a href="{{ path ('gestion_mdp_modification') }}" class="btn btn-dark">Modifier</a></td>
                <td><a href="{{ path('gestion_suppression', {'id':user.id}) }}" class="btn btn-dark">Supprimer</a></td>
            </tr>
            </tbody>
        </table>
    </div>

{% endblock %}
